{
  "id": "main",
  "template": "mainTpl.dust",
  "selector": "main.mainView",
  "childViewContainer": ".contentContainer",
  "attributes": {
    "className": "main container-fluid",
    "tagName": "main"
  },
  "sections": [
    {
      "id": "splash",
      "template": "splashTpl.dust",
      "attributes": {
        "className": "splash"
      },
      "selector": ".splash"
    },
    {
      "id": "content",
      "selector": ".content",
      "attributes": {
        "className": "content"
      },
      "children": [
        {
          "id": "core",
          "selector": "section.core",
          "template": "coreTpl.dust",
          "attributes": {
            "tagName": "section",
            "className": "core"
          }
        },
        {
          "id": "banner",
          "selector": "div.banner",
          "attributes": {
            "className": "core-banner"
          }
        },
        {
          "id": "menu",
          "selector": "nav.menu-container",
          "template": "menu.dust",
          "attributes": {
            "tagName": "nav",
            "className":"menu-container"
          }
        },
        {
          "id": "about",
          "selector": "section.about",
          "template": "aboutTpl.dust",
          "attributes": {
            "tagName": "section",
            "className": "about"
          }
        },
        {
          "id": "github",
          "selector": "section.github",
          "template": "githubTpl.dust",
          "attributes": {
            "tagName": "section",
            "className": "github row"
          }
        }
      ]
    },
    {
      "id": "contact",
      "selector": ".contact",
      "template": "contactTpl.dust",
      "attributes": {
        "id": "jhm_connect",
        "className": "contact col-xs-12",
        "tagName": "section"
      }
    },
    {
      "id": "footer",
      "selector": ".footer",
      "template": "footer.dust",
      "attributes": {
        "className": "footer",
        "tagName": "footer"
      }
    }
  ]
}