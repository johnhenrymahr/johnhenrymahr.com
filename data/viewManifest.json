{
  "template": "mainTpl.dust",
  "selector": "main.mainView",
  "attributes": {
    "className": "main container-fluid",
    "tagName": "main"
  },
  "sections": [
    {
      "id": "splash",
      "template": "splashTpl.dust",
      "attributes": {
        "className": "splash"
      },
      "selector": ".splash"
    },
    {
    "container": {
      "attributes": {
        "className": "content col-xs-12 col-md-8 col-lg-6 col-xl-6"
     }
    },
    "children": [
        {
            "id": "core",
            "selector": "section.core",
            "template": "coreTpl.dust",
            "attributes": {
              "tagName": "section",
              "className": "core"
            }
        }
      ]
    },
    {
      "id": "contact",
      "selector": "section.contact",
      "template": "contactTpl.dust",
      "attributes": {
        "tagName": "section",
        "className": "contact col-xs-12"
      }
    }]
}
